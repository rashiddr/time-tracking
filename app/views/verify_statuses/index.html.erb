<%= form_tag verify_statuses_path, :method => 'get', class: "form-inline", role:"form"  do %>
  <div class="form-group">
      <label for="">Date</label>
      <%= date_field_tag :search_date, params[:search_date]%>
  </div>
  <div class="form-group">
      <label for="">Name</label>
      <%= collection_select(:user,:user_id, User.all, :id, :first_name,include_blank: "Select an employe") %>
  </div>
  </p>

   <%= submit_tag "Search" ,class: "btn btn-default" %>
<% end %>

<table class="table table-hover">
  	<thead class="thead-default">
		<tr>
			<th>Date</th>
			<th>Name</th>
			<th>Project</th>
			<th>Duration</th>
			<th>Activity</th>
			<th>Created at</th>
		</tr>
  	</thead>
  	<tbody>
  		<%@daily_status.each do |daily_status| %>
	

		<tr>
			<td><%= daily_status.status_date %></td> 
			<td><%= daily_status.user.first_name %>  <%= daily_status.user.last_name %></td>
			<td><%= daily_status.project.project_name %></td>
			<td><%= daily_status.duration %></td>
			<td><%= daily_status.work_done %></td>
			<td><%= daily_status.created_at %></td>
		</tr>
  		<% end %>
  	</tbody>
</table>
<script>
    $( function() {
      $( "#search_date" ).datepicker({
              changeMonth:true,
              changeYear:true,
              dateFormat:"yy-mm-dd"
      });
    } );
  </script>