<div class="col-md-12"><h2>Daily Status</h2></div>
<%= link_to 'Submit new', new_daily_status_path,class: 'btn btn-primary btn-sm'%>
<% @daily_status.each do |status| %>
	<div class="panel panel-default">
	  <div class="panel-body">
	    	<div class="row">
	    		<div class="col-md-2 col-sm-4">
	    			<p><%= status.status_date %></p>
	    		</div>
	    		<div class="col-md-2 col-sm-4">
	    			<p><%= status.project.project_name%></p>
	    			<p><%= status.duration %> hours</p>
	    		</div>
	    		<div class="col-md-7 col-sm-12">
	    			<p><%= status.work_done %></p>
	    		</div>
	    		<div class="col-md-1 col-sm-1 col-xs-12">
	    			<div class="row">
	    				<div class="col-md-6 col-sm-6 col-xs-1">
	    					<p><%= link_to ('<span class="glyphicon glyphicon-blackboard"></span>').html_safe, daily_status_path(status)%>
	    					</p>
	    				</div>
	    				<div class="col-md-6 col-sm-6 col-xs-1">
	    					<p><%= link_to ('<span class="glyphicon glyphicon-pencil"></span>').html_safe, edit_daily_status_path(status)%>
	    					</p>
	    				</div>
	    			</div>
	    		</div>
	    	</div>
	  </div>
	</div>
<% end %>
<%= will_paginate @daily_status %>

