<div class="row">
	<% @user.each do |user| %>
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-6">
					<%= image_tag user.user_pic.url(:thumb),class:'img-responsive img-thumbnail' %>
				</div>
				<div class="col-md-6">
					<div class="row">
						<div class="col-md-12"><%= user.first_name %> <%= user.last_name %></div>
						<div class="col-md-12"><%= user.email%></div>
						<div class="col-md-12"> Join on:<%= user.created_at%></div>
						<div class="col-md-12"><%= link_to ('<span class="glyphicon glyphicon-blackboard">show</span>').html_safe, show_user_path(user) %></div>
					</div>
				</div>
			</div>				
		</div>
	<% end %>
</div>